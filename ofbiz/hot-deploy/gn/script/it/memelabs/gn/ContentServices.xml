<?xml version="1.0" encoding="UTF-8"?>

<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods.xsd">

    <simple-method method-name="createAgreementContent" short-description="Create Agreement Content Entity">
        <make-value value-field="agreementContent" entity-name="GnAgreementContent"/>
        <set-pk-fields value-field="agreementContent" map="parameters"/>
        <set-nonpk-fields value-field="agreementContent" map="parameters"/>

        <if-empty field="agreementContent.fromDate">
            <now-timestamp field="nowTimestamp"/>
            <set field="agreementContent.fromDate" from-field="nowTimestamp"/>
        </if-empty>

        <create-value value-field="agreementContent"/>
    </simple-method>

    <simple-method method-name="updateAgreementContent" short-description="Update Agreement Content Entity">
        <make-value value-field="lookupPkMap" entity-name="GnAgreementContent"/>
        <set-pk-fields value-field="lookupPkMap" map="parameters"/>

        <find-by-primary-key map="lookupPkMap" value-field="agreementContent"/>
        <set-nonpk-fields value-field="agreementContent" map="parameters"/>
        <store-value value-field="agreementContent"/>
    </simple-method>

    <simple-method method-name="removeAgreementContent" short-description="Update Agreement Content Entity">
        <make-value value-field="lookupPkMap" entity-name="GnAgreementContent"/>
        <set-pk-fields value-field="lookupPkMap" map="parameters"/>

        <find-by-primary-key map="lookupPkMap" value-field="agreementContent"/>
        <remove-value value-field="agreementContent"/>
    </simple-method>

</simple-methods>
